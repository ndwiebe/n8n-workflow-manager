# Server Configuration
NODE_ENV=production
PORT=3001
FRONTEND_URL=https://your-frontend-domain.com

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=24h

# Database Configuration (PostgreSQL on Hetzner)
DATABASE_URL=postgresql://username:password@your-hetzner-server-ip:5432/n8n_workflow_manager
DB_HOST=your-hetzner-server-ip
DB_PORT=5432
DB_NAME=n8n_workflow_manager
DB_USER=your-postgres-username
DB_PASSWORD=your-postgres-password

# Redis Configuration (optional, for caching)
REDIS_URL=redis://your-hetzner-server-ip:6379
REDIS_HOST=your-hetzner-server-ip
REDIS_PORT=6379

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@yourcompany.com
FROM_NAME=n8n Workflow Manager

# Logging Configuration
LOG_LEVEL=info
LOG_DIR=./logs

# Security Configuration
ENCRYPTION_KEY=your-encryption-key-for-secrets-manager
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Template Configuration
TEMPLATES_PATH=./data/workflow-templates

# n8n Integration (Self-hosted on Hetzner)
N8N_BASE_URL=https://your-n8n-domain.com
N8N_API_KEY=your-n8n-api-key
N8N_WEBHOOK_URL=https://your-n8n-domain.com/webhook
N8N_WEBHOOK_PATH=/webhook-test/workflow-manager

# Qdrant Vector Database Configuration
QDRANT_URL=http://your-hetzner-server-ip:6333
QDRANT_API_KEY=your-qdrant-api-key
QDRANT_COLLECTION_NAME=workflow_embeddings

# Hetzner Server Configuration
HETZNER_SERVER_IP=your-hetzner-server-ip
HETZNER_API_TOKEN=your-hetzner-api-token

# Docker Configuration
DOCKER_REGISTRY=your-docker-registry
DOCKER_IMAGE_TAG=latest

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/ssl/certs/workflow-manager.crt
SSL_KEY_PATH=/etc/ssl/private/workflow-manager.key

# Monitoring Configuration
SENTRY_DSN=https://your-sentry-dsn
NEW_RELIC_LICENSE_KEY=your-new-relic-key

# Development/Production Switch
DEBUG=false
CORS_ORIGIN=https://your-frontend-domain.com

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket